<UserControl x:Class="Wordki.Controls.DrawerSign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Wordki.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="{StaticResource Background}" d:DataContext="{d:DesignInstance controls:DrawerSign}">
    <Grid>
      <Border
        x:Name="Border"
        MinWidth="30"
        MinHeight="30"
        Margin="2"
        BorderBrush="{StaticResource Foreground}"
        BorderThickness="1"
        CornerRadius="5">
        <TextBlock
          x:Name="TextBlock"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Foreground="{StaticResource Foreground}"/>
          
      </Border>
    </Grid>
</UserControl>
