CREATE TABLE IF NOT EXISTS users(
    userId                BIGINT       NOT NULL,
    userName              VARCHAR (32) NOT NULL,
    password              VARDCHAR(32) NOT NULL,
    downloadDate          DATETIME     NULL,
    translationDirection   INT          NULL,
    allWords              BOOLEAN      NULL,
    timeOut               INT          NULL,
    apiKey                VARCHAR(32)  NULL,
    isRegister            BOOLEAN      NULL,
    PRIMARY KEY (userId)
);

CREATE TABLE IF NOT EXISTS groups (
    groupId        BIGINT        NOT NULL,
    userId         BIGINT        NOT NULL,
    groupName      VARCHAR (64)  NULL,
    language1Type  TINYINT           NOT NULL,
    language2Type  TINYINT           NOT NULL,
    state          INT           NOT NULL,
    PRIMARY KEY (groupId, userId)
);

CREATE TABLE IF NOT EXISTS results (
    resultId      BIGINT   NOT NULL,
    userId        BIGINT   NOT NULL,
    groupId       BIGINT   NOT NULL,
    correct        INT      NOT NULL,
    accepted       INT      NOT NULL,
    wrong          INT      NOT NULL,
    invisibilities INT      NOT NULL,
    timeCount     INT      NOT NULL,
    direction      TINYINT      NOT NULL,
    lessonType    TINYINT      NOT NULL,
    dateTime      DATETIME NOT NULL,
    state          INT      NOT NULL,
    PRIMARY KEY (resultId, userId)
);

CREATE TABLE IF NOT EXISTS words (
    wordId             BIGINT        NOT NULL,
    userId             BIGINT        NOT NULL,
    groupId            BIGINT        NOT NULL,
    language1          VARCHAR (256) NULL,
    language2          VARCHAR (256) NULL,
    drawer             TINYINT           NOT NULL,
    language1Comment   VARCHAR (256) NULL,
    language2Comment   VARCHAR (256) NULL,
    visible            BOOLEAN           NOT NULL,
    state              INT           NOT NULL,
    PRIMARY KEY (userId, wordId),
    CHECK (drawer>(-1) AND drawer<(5))
);